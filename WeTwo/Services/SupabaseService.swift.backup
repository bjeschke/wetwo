    private init() {
        print("🔧 Initializing Supabase client...")
        print("   URL: \(supabaseURL)")
        print("   Key: \(String(supabaseAnonKey.prefix(20)))...")
        
        self.client = SupabaseClient(
            supabaseURL: URL(string: supabaseURL)!,
